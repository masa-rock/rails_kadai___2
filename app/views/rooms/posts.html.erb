<div class="room_posts_container">
  <div class="room_chart">
    <h3 class="pb-3 mb-1">登録済みルーム一覧</h3>
    <table class="posts_table">
      <thead>
        <tr class="text-center posts_table_th">
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>料金</th>
          <th>作成日</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr class="posts_table_td">
            <td class="posts_img">
              <% if room.image.attached? %>
                <%= image_tag(url_for(room.image)) %>
              <% end %>
            </td>
            <td><%= link_to "#{room.name}",room_path(room.id),class:"posts_name" %></td>
            <td><%= room.introduction %></td>
            <td>¥ <%= room.cost %></td>
            <td><%= room.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
