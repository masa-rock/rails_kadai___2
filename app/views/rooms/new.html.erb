<div class="account_container">
  <div class="account_left">
    <div class="sidebar_container">
      <ul id="account_sidebar">
        <li class="active"><p>基本情報</p></li>
      </ul>
    </div>
  </div>
  <div class="account_right">
    <div class="user_view_box">
      <div class="update_content">
        <h3><p class="account_sidebar_list">ルーム情報登録</p></h3>
      </div>
      <%= form_with model: @room do |f| %>
        <%= f.hidden_field :user_id,value:current_user.id %> 
        <div class="update_content">
          <div class="row">
            <div class="col-md-3"><%= f.label :name, "ルーム名",class:"font-weight-bold"%><span class="account_label">必須</span></div>
            <%= f.text_field :name,placeholder: "ルーム名を入力", required: true ,class:"col-md-9" %>
          </div>
        </div>
        <div class="update_content">
          <div class="row">
            <div class="col-md-3"><%= f.label :introduction, "ルーム紹介",class:"font-weight-bold" %><span class="account_label">必須</span></div>
            <%= f.text_area :introduction,placeholder: "ルーム説明を入力", required: true ,class:"col-md-9" %>
          </div>
        </div>
        <div class="update_content">
          <div class="row">
            <div class="col-md-3"><%= f.label :cost, "料金",class:"font-weight-bold" %><span class="account_label">必須</span></div>
            <%= f.text_field :cost,placeholder: "一日あたりの料金を入力", required: true ,class:"col-md-9" %>
          </div>
        </div>
        <div class="update_content">
          <div class="row">
            <div class="col-md-3"><%= f.label :address, "住所",class:"font-weight-bold" %><span class="account_label">必須</span></div>
            <%= f.text_field :address,placeholder: "住所を入力", required: true ,class:"col-md-9" %>
          </div>
        </div>
        <div class="update_content">
          <div class="row">
            <div class="col-md-3"><%= f.label :image, "ルーム画像",class:"font-weight-bold" %><span class="account_label">必須</span></div>
            <%= f.file_field :image, required: true ,class:"col-md-9" %>
          </div>
        </div>
        <div class="update_content">
          <div class="row">
            <%= f.submit "登録",class:"col-md-2 btn-primary btn-password-edit" %>
          </div>
        </div>
      <% end %>    
    </div>
  </div>
</div>
