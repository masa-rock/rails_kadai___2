<div class="room_user_show_container">
  <div class="room_user_view_box">
    <ul>
      <li>
        <div class="row room_user_reserve_column">
          <div class="col-md-3 font-weight-bold">予約した部屋</div>
          <div class="col-md-9"><%= @room.name %></div>
        </div>
      </li>
      <li>
        <div class="row room_user_reserve_column">
          <div class="col-md-3 font-weight-bold">開始日</div>
          <div class="col-md-9"><%= @room_user.start_date.to_s(:datetime_jp) %></div>
        </div>
      </li>
      <li>
        <div class="row room_user_reserve_column">
          <div class="col-md-3 font-weight-bold">終了日</div>
          <div class="col-md-9"><%= @room_user.end_date.to_s(:datetime_jp) %></div>
        </div>
      </li>
      <li>
        <div class="row room_user_reserve_column">
          <div class="col-md-3 font-weight-bold">価格</div>
          <div class="col-md-9"><%= @room_user.totalamount %></div>
        </div>
      </li>    
    </ul>
  </div>
</div>
